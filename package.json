{
  "name": "async-ricochet-robots",
  "version": "0.1.0",
  "description": "Asynchronous multiplayer Ricochet Robots puzzle game with serverless Azure backend",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "dev:client": "npm run dev --prefix client",
    "start:client": "npm start --prefix client",
    "swa:start": "swa start client/dist --api-location api",
    "swa:build": "npm run build --prefix client && npm run build --prefix api"
  },
  "keywords": [
    "ricochet-robots",
    "puzzle",
    "game",
    "azure",
    "serverless",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@azure/static-web-apps-cli": "^2.0.7",
    "@types/jest": "^30.0.0",
    "@types/minimatch": "^6.0.0",
    "@types/node": "^24.7.0",
    "@types/node-fetch": "^2.6.13",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3"
  }
}
